<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - CaisseEnregistreuse</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
</head>
<body>
<header>
    <!-- Barre de navigation -->
    <nav class="navbar navbar-expand-sm navbar-light bg-white border-bottom box-shadow mb-3">
        <div class="container-fluid">
            <!-- Titre / Logo -->
            <a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Index">CaisseEnregistreuse</a>
            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav"
                    aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="collapse navbar-collapse" id="navbarNav">
                <ul class="navbar-nav me-auto">
                    <!-- Lien vers Accueil -->
                    <li class="nav-item">
                        <a class="nav-link @((ViewContext.RouteData.Values["controller"] as string) == "Home" ? "active" : "")"
                           asp-controller="Home" asp-action="Index">Accueil</a>
                    </li>
                    <!-- Lien vers Produits -->
                    <li class="nav-item">
                        <a class="nav-link @((ViewContext.RouteData.Values["controller"] as string) == "Produits" ? "active" : "")"
                           asp-controller="Produits" asp-action="Index">Produits</a>
                    </li>
                    <!-- Lien vers Catégories -->
                    <li class="nav-item">
                        <a class="nav-link @((ViewContext.RouteData.Values["controller"] as string) == "Categories" ? "active" : "")"
                           asp-controller="Categories" asp-action="Index">Catégories</a>
                    </li>
                    <!-- Lien vers Panier -->
                    <li class="nav-item">
                        <a class="nav-link @((ViewContext.RouteData.Values["controller"] as string) == "Panier" ? "active" : "")"
                           asp-controller="Panier" asp-action="Index">Panier</a>
                    </li>
                </ul>
            </div>
        </div>
    </nav>
</header>

<!-- Contenu principal -->
<div class="container">
    <main role="main" class="pb-3">
        @RenderBody()
    </main>
</div>

<!-- Footer -->
<footer class="border-top footer text-muted py-3">
    <div class="container">
        &copy; @DateTime.Now.Year - CaisseEnregistreuse - <a asp-controller="Home" asp-action="Privacy">Confidentialité</a>
    </div>
</footer>

<!-- Scripts -->
<script src="~/lib/jquery/dist/jquery.min.js"></script>
<script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
<script src="~/js/site.js" asp-append-version="true"></script>
@await RenderSectionAsync("Scripts", required: false)
</body>
</html>
